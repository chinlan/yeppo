<div class="container">
<h2>上傳最新作品</h2>
<%= form_for @shot, :url => user_shots_path(@user) do |f| %>
  
  <div class="form-group">
    <%= f.label :photo, "上傳照片" %>
    <%= f.file_field :photo %>
  </div>

  <div class="form-group">
    <%= f.label :tag_list, "標注照片" %>
    <%= f.text_field :tag_list %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <P><%= f.collection_select(:category_id, Category.all, :id, :name) %></P>
  </div>

  <div class="form-group">
    <%= f.label :description, "作品簡介" %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit '送出' %>
  <% end %>

  <%= link_to '取消', user_path(@user) %>

  </div>

  <script>
    $("#shot_tag_list").select2({
      tags: <%=raw Tag.all.map{ |t| t.name }.to_json %>,
      tokenSeparators: [',', ' ']
    });
    // $("#shot_category_id").select2();
  </script>